// Called when the app wants to create a window.
func setup() {
    return {
        title:  "Novel",   // Window title
        width:  1280,      // Window width
        height: 720        // Window height
    };
}

// Called when the app wants to start the game.
func start() {
    // Import the library.
    import("novel.noct");

    // Create a Novel object.
    initNovel();

    // Load the start.tag file.
    Novel->moveToTagFile("start.tag");
}

// Called every frame.
func frame() {
    Novel->frame();
}
